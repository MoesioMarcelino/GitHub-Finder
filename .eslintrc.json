{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {},
    "jest": {
        "collectCoverageFrom": [
            "src/pages/**/*.tsx",
            "src/components/**/*.tsx",
            "src/hooks/**/*.tsx",
            "!src/hooks/index.tsx"
        ]
    }
}